<Page
    x:Class="Number24.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Number24"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Margin="120,30,0,0">
        <TextBlock Text="数字1" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="20" />
        <TextBox x:Name="txtNumber1" InputScope="Number" HorizontalAlignment="Left" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
        <TextBlock Text="数字2" FontSize="20"/>
        <TextBox x:Name="txtNumber2" InputScope="Number" HorizontalAlignment="Left" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
        <TextBlock Text="数字3"  FontSize="20"/>
        <TextBox x:Name="txtNumber3" InputScope="Number" HorizontalAlignment="Left" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
        <TextBlock Text="数字4"  FontSize="20"/>
        <TextBox x:Name="txtNumber4"  InputScope="Number" HorizontalAlignment="Left" TextWrapping="Wrap" Text="1" VerticalAlignment="Top"/>
        <Button x:ConnectionId='1'  x:Name="btnCalculate" Content="计算"                            />
        <TextBlock Text="结果" FontSize="20"/>
        <TextBlock x:Name="txtblockResult" FontSize="20"/>
    </StackPanel>
</Page>

